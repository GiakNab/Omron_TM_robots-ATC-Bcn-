<launch>
  <!-- By default, we won't load or override the robot_description -->
  <arg name="load_robot_description" default="false"/>
  <!-- By default, we do not start a database (it can be large) -->
  <arg name="db" default="false" />
  <!-- Allow user to specify database location -->
  <arg name="db_path" default="$(find tm5_700_gripper_moveit_config)/default_warehouse_mongo_db" />
  <!-- By default, we are not in debug mode -->
  <arg name="debug" default="false" />

  <!-- Load Gazebo empy world and send the urdf to server param as robot_description-->
  <include file= "$(find tm5_700_gripper_moveit_config)/launch/gazebo.launch"/>
   
  <!-- Spawn the controller for Gazebo--> 
  <include file= "$(find tm5_700_gripper_moveit_config)/launch/tm5_700_robotiq_joint_state_controller.launch"/>
  <include file= "$(find tm5_700_gripper_moveit_config)/launch/tm5_700_robotiq_arm_controller.launch"/>
  <include file= "$(find tm5_700_gripper_moveit_config)/launch/tm5_700_robotiq_gripper_controller.launch"/>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" >
    <rosparam param="source_list">[move_group/fake_controller_joint_states]</rosparam>
    <rosparam param="source_list">[tm5_700_robotiq/joint_states]</rosparam>
  </node>
  
   <!-- Run the main MoveIt! executable without trajectory execution (we do not have controllers configured by default) -->
  <include file="$(find tm5_700_gripper_moveit_config)/launch/move_group.launch">
    <arg name="allow_trajectory_execution" value="true"/>
    <arg name="fake_execution" value="false"/>
    <arg name="info" value="true"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="load_robot_description" value="$(arg load_robot_description)"/>
  </include>

  <!-- Run Rviz and load the default config to see the state of the move_group node -->
  <include file="$(find tm5_700_gripper_moveit_config)/launch/moveit_rviz.launch">
    <arg name="rviz_config" value="$(find tm5_700_gripper_moveit_config)/launch/moveit.rviz"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- If database loading was enabled, start mongodb as well -->
  <include file="$(find tm5_700_gripper_moveit_config)/launch/default_warehouse_db.launch" if="$(arg db)">
    <arg name="moveit_warehouse_database_path" value="$(arg db_path)"/>
  </include>

</launch>